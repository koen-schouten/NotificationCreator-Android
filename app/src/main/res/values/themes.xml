<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NotificationCreator" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorPrimaryVariant">@color/primary_color_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary_color</item>
        <item name="colorSecondaryVariant">@color/primary_color_light</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/primary_color_dark</item>
        <!-- Customize your theme here. -->
        <item name="floatingActionButtonStyle">@style/Widget.App.ExtendedFloatingActionButton</item>
        <!-- Style of all buttons -->
        <item name="materialButtonStyle">@style/ButtonStyle</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="toolbarStyle">@style/ToolbarStyle</item>

    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="ButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:drawableTint">@android:color/white</item>
    </style>


    <style name="list_body_title" parent="CardView.Light">
        <item name="android:textColor">@android:color/primary_text_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Medium</item>
    </style>

    <style name="list_body_message">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
    </style>

    <style name="list_body_date">
        <item name="android:textColor">@android:color/secondary_text_light</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:paddingLeft">8dp</item>
        <item name="android:textAppearance">@android:style/TextAppearance.Material.Small</item>
    </style>

    <style name="DrawerHeader">
        <item name="android:background">@color/primary_color</item>
        <item name="android:textColor">@android:color/primary_text_dark</item>
    </style>


    <!-- Floating action button style -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.MaterialComponents.FloatingActionButton">

    </style>

</resources>